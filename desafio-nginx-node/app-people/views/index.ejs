<!DOCTYPE html>
<html>

  <head>
    <title>
      <%= title %>
    </title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  </head>

  <body class="container" style="margin-top: 50px;">

    <h1>
      <%= title %>
    </h1>

    <br />

    <div class="card-body">
      <h3>List people</h3>
      <br />

      <% if(data.length) { %>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i< data.length; i++) { %>
              <tr>
                <th scope="row">
                  <%= (i+1) %>
                </th>
                <td>
                  <%= data[i].name%>
                </td>
              </tr>
              <% } %>
          </tbody>
        </table>
        <% } %>

          <!-- if result is empty -->
          <% if(!data.length) { %>
            <p class="text-center">No people found!</p>
            <% } %>

    </div>

  </body>

</html>
